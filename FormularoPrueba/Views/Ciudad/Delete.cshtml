<div>

    <hr />
    <hr />
    @if (ViewBag.mensaje != null)
    {
        <strong style="color:red">@ViewBag.mensaje</strong>
    }
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
