
@using PagedList.Mvc
@model PagedList.IPagedList<FormularoPrueba.Models.ModeloCiudadGUI>

@{
    ViewBag.Title = "Index";
}
<style>
    .ul.pagination {
        display: inline-block;
        padding: 0;
        margin: 0;
    }

    ul.pagination li {
        display: inline;
    }

        ul.pagination li a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
            transition: background-color .3s;
        }

            ul.pagination li a.active {
                background-color: #4CAF50;
                color: white;
            }

            ul.pagination li a:hover:not(.active) {
                background-color: #ddd;
            }
</style>

<h2>Ciudades</h2>

<p>
    @Html.ActionLink("Crear Nueva", "Create", new { }, new { @class = "btn btn-success" })
</p>



    @using (Html.BeginForm())
    {
        <center>
            <h2>Lista de ciudades</h2>
            <div style="noen; margin-left:25%; margin-right:20%">
                <table style="width:100%" border="0">
                    <tr>

                        <th style="width:10%; text-align:center">@Html.Label("Nombre")</th>
                        <th style="width:10%; text-align:center">@Html.Label("Accion")</th>


                    </tr>

                    @for (int i = 0; i < Model.Count; i++)
                    {
                <tr style="border:none; text-align:center" >


                    <td>@Model[i].Nombre</td>
                    
                    <td >
                        @Html.ActionLink("Editar", "Edit", new { id = @Model[i].Id }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Detalles", "Details", new { id = @Model[i].Id }, new { @class = "btn btn-warning" }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = @Model[i].Id }, new { @class = "btn btn-danger" })
                    </td>


                </tr>

                    }
                </table>


            </div>
        </center>
        <div id="container" style="margin-left: 20px">
            <p></p>
            <p></p>
            <div class="pagination" style="margin-left: 400px">
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
                of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>

    }
